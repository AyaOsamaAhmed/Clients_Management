<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="15dp"
        android:paddingTop="15dp"

        >
        <Button
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/add"
            android:id="@+id/add_button"

            />
    <Button
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/buttonsearch"
        android:id="@+id/search_button"

        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/search"
            android:paddingRight="10dp"
            android:paddingLeft="20dp"
            android:id="@+id/search_text"
            android:hint="إدخل اسم العميل"
            android:textSize="22dp"
            />
    </LinearLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="70dp"
        android:layout_marginTop="@dimen/marginRight_size"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/marginRight_size"
            android:layout_marginLeft="@dimen/marginleft_size"
            android:orientation="horizontal"
            android:id="@+id/finance"
            >
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="left"
                android:background="@mipmap/icon"
                android:id="@+id/button_details"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="محمد الجندى"
                android:textSize="@dimen/size_text"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:textColor="@color/white"
                android:paddingTop="15dp"
                />

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/line"
            android:layout_below="@+id/finance"
            android:id="@+id/image_finance"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/marginRight_size"
            android:layout_marginLeft="@dimen/marginleft_size"
            android:orientation="horizontal"
            android:id="@+id/engineer"
            android:layout_below="@+id/image_finance"
            >
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="left"
                android:background="@mipmap/icon"
                android:id="@+id/button_engineer"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="تامر حسنى"
                android:paddingTop="15dp"
                android:textSize="@dimen/size_text"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:textColor="@color/white"
                />

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/line"
            android:layout_below="@+id/engineer"
            android:id="@+id/image_engineer"
            />


    </RelativeLayout>
</ScrollView>
</LinearLayout>