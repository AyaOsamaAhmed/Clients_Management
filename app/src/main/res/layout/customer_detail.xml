<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    android:id="@+id/main"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/home"
        android:layout_weight="0.1"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/fullcard"
            android:layout_marginTop="5dp"
            android:id="@+id/whatsapp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingRight="5dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="تاريخ أخر تعامل "
                android:textAppearance="@style/header"
                android:gravity="start"
                android:textColor="@color/colorPrimary"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/smalltext"
                android:layout_margin="10dp"
                android:text="01-01-2018"
                android:textColor="@color/text"
                android:textAppearance="@style/text"
                android:gravity="center"
                android:textDirection="rtl"
                android:inputType="date"
                android:maxLength="10"
                android:id="@+id/last_date"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/cash"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="مشتريات و دفع جديد"
                    android:textAppearance="@style/header"
                    android:textColor="@color/text"
                    android:paddingRight="5dp"
                    android:gravity="center"
                    android:background="@mipmap/stext"
                    android:layout_marginTop="30dp"
                    android:id="@+id/new_paid"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/home"
        android:id="@+id/detail"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:isScrollContainer="true"
            >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <!-- 2 columns
                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/textView1"
                        android:text="التفاصيل"
                        android:padding="9dip"
                        android:textAppearance="@style/text"
                        android:layout_margin="4dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:text="مبلغ المدفوعات "
                        android:textAppearance="@style/text"
                        android:gravity="center"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:text="مبلغ المشتريات "
                        android:textAppearance="@style/text"
                        android:padding="5dip"
                        android:layout_weight="1"
                        android:gravity="center"
                        />

                    <TextView
                        android:text="التاريخ"
                        android:textAppearance="@style/text"
